# User identity configured via install.sh from secrets/.git_identity
# Run: cp secrets/.git_identity.template secrets/.git_identity
# Then edit with your details and re-run install.sh

[core]
	excludesfile = /Users/jamesdoss-gollin/.gitignore_global
	pager = delta

[alias]
  st = status

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[delta]
	navigate = true
	line-numbers = true
	syntax-theme = OneHalfDark
	side-by-side = false

[interactive]
	diffFilter = delta --color-only

# Credential helper configured via install.sh based on platform
# macOS: osxkeychain, Linux: cache

[grep]
  lineNumber = true

[help]
  autocorrect = 1

[difftool]
	prompt = false

[mergetool]
	prompt = false

[push]
  default = simple
  followTags = true

[fetch]
  prune = true

[diff]
  renames = copies
  indentHeuristic = true
  colorMoved = default
  tool = codium

[difftool "codium"]
  cmd = codium --wait --diff \"$LOCAL\" \"$REMOTE\"

[merge]
  tool = codium
  conflictstyle = diff3
  defaultToUpstream = true

[mergetool "codium"]
  cmd = codium --wait --merge \"$REMOTE\" \"$LOCAL\" \"$BASE\" \"$MERGED\"
  trustExitCode = true
[diff "jupyternotebook"]
	command = git-nbdiffdriver diff
[merge "jupyternotebook"]
	driver = git-nbmergedriver merge %O %A %B %L %P
	name = jupyter notebook merge driver
[difftool "nbdime"]
	cmd = git-nbdifftool diff \"$LOCAL\" \"$REMOTE\" \"$BASE\"
[mergetool "nbdime"]
	cmd = git-nbmergetool merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[pull]
	rebase = false
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = James Doss-Gollin
	email = jdossgollin@rice.edu
[github]
	user = jdossgollin
[credential]
	helper = osxkeychain
